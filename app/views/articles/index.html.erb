<h1>Here are all the articles created</h1>



<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>

  <%= link_to "Create new Article", new_article_path %>
  <% @articles.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td>
        <%= link_to "Show", article_path(item) %>
        <%= link_to "Edit", edit_article_path(item) %>
        <%= link_to "Delete", item, method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>


  </tbody>
</table>
